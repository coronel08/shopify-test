<body>
    <div class="min-h-screen flex flex-col justify-between">
        <nav class="bg-gradient-to-r from-green-300 to-blue-300">
            <div class="md:flex md:justify-between px-6 py-3">

                <div class="flex items-center justify-between">
                    <!-- Logo for navbar -->
                    <a class="text-xl font-bold md:text-2xl hover:text-blue-900" href="/">
                        Brand
                    </a>
                    <!-- Mobile Menu -->
                    <div class="flex md:hidden text-xl" id="nav-button">
                        <button type="button">
                            <i class="fas fa-bars"></i>
                        </button>
                    </div>
                </div>

                <!-- NavItems -->
                <div class="flex hidden md:flex md:self-end items-center h-12 lg:px-12 justify-between" id="nav-items">
                    <a class="my-1 md:mx-4 md:my-0 hover:text-white" href="/"> Home </a>
                    <a class="my-1 md:mx-4 md:my-0 hover:text-white" href="#"> Shop </a>
                    <button
                        class="bg-blue-700 hover:bg-purple-500 border-2 border-gray-900 rounded-lg py-1 px-3 text-white">
                        Cart 
                    </button>
                </div>
            </div>
        </nav>



        <!-- Content section for product -->

        <section class="h-full bg-white">
            {% block content %}
            {% endblock %}
        </section>


        <!-- Footer section stickied to bottom -->
        <footer class="
            bg-gradient-to-r from-green-300 to-blue-300 text-gray-600 static inset-x-0 bottom-0"
        >
        
            <!-- Footer Categories Section -->
            <div class="container p-2 mx-auto flex flex-wrap md:flex-nowrap flex-col md:flex-row md:items-start">
                <div class="flex flex-grow flex-wrap mx-auto my-2 justify-evenly max-w-xl">
                    <div class="lg:w-1/3 md:w-1/2 px-4">
                        <h2 class=" title-font font-medium text-gray-900 tracking-widest text-sm mb-3">
                            CATEGORIES 1
                        </h2>
                        <nav class="list-none text-gray-600 hover:text-gray-800">
                            <li>
