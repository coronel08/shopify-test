{% layout "navbar.liquid" %}

{% block content %}
<div class="lg:container">
    <div class="flex ">
        <div class="flex w-5/6 justify-center md:justify-start">
            <h1 class="text-4xl text-purple-500 font-bold uppercase m-4">
                {{ product.title }}
            </h1>
        </div>

        <div class="flex-wrap w-1/6 m-2 lg:pl-48">
            <p class="font-medium text-sm"> 
                Category: 
            </p>

            {% comment %} This is the styled button for category {% endcomment %}
            <button type="button" class="
                p-1
                text-blue-500 font-bold uppercase text-sm
                border border-solid border-purple-500
                hover:bg-purple-500 hover:text-white
                rounded outline-none focus:outline-none
                ease-linear transition-all duration-150
                ">
                    {% assign foo = product.handle | split:"-" %}
                    {{ foo[0] }}
            </button>
        </div> 
    </div>

    {% comment %} Container for Image on left and price and description on right {% endcomment %}
    <div class="container mx-auto flex h-auto flex-col sm:flex-row"> 

        <div class="ml-auto">
            {% for image in product.featured_image %}
                <img src="{{image}}" alt="shoe image">
            {% endfor %}
        </div>
        <div class="w-auto md:w-1/3 p-2 text-center md:text-left">
            <p class="mt-4 font-semibold"> 
                Price: {{ product.price }} 
            </p>
            <p>
                {{ product.description | truncate:150 }}
            </p>

            {% comment %} Select size section {% endcomment %}
            <div class="py-2 md:py-8">
                <p class="font-semibold"> Sizing: </p>
                <div class=grid grid-cols-4 lg:grid-cols-5 >
                    {% for option in product.variants %}
                        <label class="cursor-pointer">
                            <input class="" type="radio" name="option-{{options.options}}" value="{{option.options}}" {% if forloop.index == 1 %} checked {% endif %} data-variant-option>
                            <span class="block border-2 rounded-md text-center">
                                {{ option.options }}
                            </span>
                        </label>
                    {% endfor %}
                </div>
            </div>

            

        </div>
    </div>
</div>
{% endblock %}




{% for product in product %}
    <p> {{ product }}</p>
{% endfor %}